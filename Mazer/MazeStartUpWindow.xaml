<Window x:Class="Mazer.MazeStartUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MazeStartUpWindow" Height="288" Width="231">
      

    <Grid>
        <TextBlock Text="MAZER" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,12" FontWeight="Bold"/>

        <StackPanel Margin="50,60,50,20" VerticalAlignment="Center">
            <Button x:Name="btnGenerateMaze" Content="Generate Maze" Margin="4" Click="btnGenerateMaze_Click" />
            <Button x:Name="btnSolveMaze" Content="Solve Maze" Margin="4" Click="btnSolveMaze_Click"/>
            <Button x:Name="btnQuit" Content="Quit" Margin="4" Click="btnQuit_Click"/>
        </StackPanel>
    </Grid>
</Window>
